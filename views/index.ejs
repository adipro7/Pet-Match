<%- include("partials/header"); %>
    <style>
        .s1
        {
            font-family: 'Pacifico',cursive;
            font-size: 40 px;
        }
    </style>    

    <div class="container">
        <div class="jumbotron">
            <h1> Dog selector</h1>
            <p class="s1">Find everything that you need to know about your favourite dog<br>on this single portal</p>
            <a href="/dogs/new" class="btn btn-primary">Add a dog</a>
        </div>
        <div class="row" style="display:flex;flex-wrap:wrap">
                <%dogs.forEach(function(dogs){%>
                    <div class="col-md-4">
                        <div class="thumbnail" style="text-align:center;">
                            <img src="<%= dogs.url %>">
                        </br>
                            <a href="/dogs/<%=dogs._id %>" class="caption" style="font-weight:700;"><span class="btn btn-sm btn-info" ><%=dogs.name%></span></a>
                       </div>
                    </div>
                <%});%> 
        </div>
    </div>
<%- include("partials/footer"); %>