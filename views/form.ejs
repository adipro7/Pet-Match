<%- include("partials/header"); %>
<div class="container">
        <div class="jumbotron">
            <h1 style="font-family:  'Dancing Script', cursive;margin: 20px 0px;text-align: center;font-size: 80px;">Add a new dog</h1>
            <p style="font-weight: 300;text-align: center;">Add dog to our database and help everyone to know about it</p>
        </div>
        <form style="width: 50%;margin:0 auto" method="POST" action="/dogs">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Dog's Breed" name="breed">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="URL of Dog's Image" name="url">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Average Life" name="life">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Male species' weight" name="male_weight">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Female species' weight" name="female_weight">
            </div>
            <div class="form-group">
                <button  class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>
<%- include("partials/footer"); %>