<%- include("partials/header"); %>
<div class="container">
        <div class="jumbotron">
            <h1 style="margin: 30px 0px;text-align: center;font-size: 100px;">Edit Dog Info</h1>
        </div>
        <form style="width: 50%;margin:0 auto" method="POST" action="/dogs/<%= dog._id %>?_method=PUT">
            <div class="form-group">
                <h class="btn btn-info">Name</h>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= dog.name %>" name="epet[name]">
            </div>
            <div class="form-group">
                <h class="btn btn-info">URL</h>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= dog.url %>" name="epet[url]">
            </div>
            <div class="form-group">
                <h class="btn btn-info">Average Life</h>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= dog.life %>" name="epet[life]">
            </div>
            <div class="form-group">
                <h class="btn btn-info">Male Species' Weight</h>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= dog.male_weight %>" name="epet[male_weight]">
            </div>
            <div class="form-group">
                <h class="btn btn-info">Female Species' Weight</h>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= dog.female_weight %>" name="epet[female_weight]">
            </div>
            <div class="form-group">
                <a href="/dogs/edit" class="btn btn-warning">Cancel</a>
            </div>
            <div class="form-group">
                <button  class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>
<%- include("partials/footer"); %>